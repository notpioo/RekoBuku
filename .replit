modules = ["web", "python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["flask_authentication:1.0.0", "python_gemini:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RekoBuku App"

[[workflows.workflow]]
name = "RekoBuku App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--reuse-port", "main:app"]
